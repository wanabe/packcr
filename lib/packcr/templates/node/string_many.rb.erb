if (
    pcc_refill_buffer(ctx, <%= n %>) < <%= n %> ||
<%- (n - 1).times do |i| -%>
    (RSTRING_PTR(rb_ivar_get(ctx->robj, rb_intern("@buffer"))) + NUM2SIZET(rb_ivar_get(ctx->robj, rb_intern("@cur"))))[<%= i %>] != '<%= Packcr.escape_character(value[i]) %>' ||
<%- end -%>
    (RSTRING_PTR(rb_ivar_get(ctx->robj, rb_intern("@buffer"))) + NUM2SIZET(rb_ivar_get(ctx->robj, rb_intern("@cur"))))[<%= n - 1 %>] != '<%= s = Packcr.escape_character(value[n - 1]) %>'
) goto L<%= "%04d" % onfail %>;
<%- if gen.location -%>
pcc_location_forward(&ctx->cur_loc, RSTRING_PTR(rb_ivar_get(ctx->robj, rb_intern("@buffer"))) + NUM2SIZET(rb_ivar_get(ctx->robj, rb_intern("@cur"))), n);
<%- end -%>
rb_ivar_set(ctx->robj, rb_intern("@cur"), SIZET2NUM(NUM2SIZET(rb_ivar_get(ctx->robj, rb_intern("@cur"))) + <%= n %>));
