<%- l = gen.next_label -%>
<%- r = expr.reachability -%>
{
    const size_t p = ctx->cur;
<%- if gen.location -%>
    const pcc_location_t p_loc = ctx->cur_loc;
<%- end -%>
<%= gen.generate_code(expr, l, 4, false) -%>
<%- if r != Packcr::CODE_REACH__ALWAYS_FAIL -%>
    ctx->cur = p;
<%-   if gen.location -%>
    ctx->cur_loc = p_loc;
<%-   end -%>
    goto L<%= format("%04d", onfail) %>;
<%- end -%>
<%- if r != Packcr::CODE_REACH__ALWAYS_SUCCEED -%>
L<%= format("%04d", l) %>:;
    ctx->cur = p;
<%-   if gen.location -%>
    ctx->cur_loc = p_loc;
<%-   end -%>
<%- end -%>
}
