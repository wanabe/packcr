1.times do |;p0, p0_loc, n0, i, pos, p_loc, n, stat|
  <%- if min > 0 -%>
  p0 = @cur
  <%-   if gen.location -%>
  p0_loc = @cur_loc
  <%-   end -%>
  n0 = chunk.thunks.length
  <%- end -%>
  i = 0
  <%- l = gen.next_label -%>
  catch(<%= l %>) do
    pos = @cur
    <%- if gen.location -%>
    p_loc = @cur_loc
    <%- end -%>
    n = chunk.thunks.length
    <%- r = expr.reachability -%>
    <%- %><%= gen.generate_code(expr, l, 4, false) -%>
    i += 1
    if @cur != pos<% if max >= 0 %> || i < <%= max %><% end %>
      redo
    end
    pos = nil
  end
  <%- if r != Packcr::CODE_REACH__ALWAYS_SUCCEED -%>
  if pos
    @cur = pos
    <%-   if gen.location -%>
    @cur_loc = p_loc
    <%-   end -%>
    chunk.thunks[n..-1] = []
  end
  <%- end -%>
  <%- if min > 0 -%>
  if i < <%= min %>
    @cur = p0
    <%-   if gen.location -%>
    @cur_loc = p0_loc
    <%-   end -%>
    chunk.thunks[n0..-1] = []
    throw(<%= onfail %>)
  end
  <%- end -%>
end
